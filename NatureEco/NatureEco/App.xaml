<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NatureEco.App">
    <Application.Resources>
        <Thickness x:Key="PageMargin"
            Left="20" Top="20"
            Right="20" Bottom="20" />

        <!-- Colors -->
        <Color x:Key="AppBackgroundColor">transparent</Color>
        <Color x:Key="AppTextColor">WhiteSmoke</Color>
        <Color x:Key="TobbedPageColor">transparent</Color>
        <Color x:Key="Foreground">green</Color>
       
        <!-- Implicit styles -->
 
        <Style TargetType="{x:Type NavigationPage}">
            <Setter Property="BarBackgroundColor" Value="#139F4F" />
      
            <Setter Property="BarTextColor" Value="White" />
        </Style >
       


    </Application.Resources>

</Application>